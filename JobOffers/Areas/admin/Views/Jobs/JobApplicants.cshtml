@model List<VwApplyForAJob>




<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Applicants </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Applicants</a></li>
                <li class="breadcrumb-item active" aria-current="page">List</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Striped Table</h4>
                 
                    <div class="table-responsive">
                        <table id="order-listing" class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="color:#fff;"> First Name </th>
                                    <th style="color:#fff;"> Second Name </th>
                                    <th style="color:#fff;"> Message  </th>
                                    <th style="color:#fff;"> Apply Date </th>
                                    <th style="color:#fff;"> Resume </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var apply in Model)
                                {
                                    <tr>

                                        <td style="color:#fff;"> @apply.firstName </td>
                                        <td style="color:#fff;">
                                            @apply.secondName
                                        </td>

                                        <td style="color:#fff;"> @apply.Message </td>
                                        <td style="color:#fff;"> @apply.ApplyDate </td>
                                        <td class="py-1">
                                            <a asp-controller="Jobs" asp-action="DownloadFile" asp-route-applyId="@apply.ApplyId">
                                                <img src="/FrontEnd/img/icon/PDF.png" alt="image">
                                            </a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <!-- Plugin js for this page -->
    <script src="~/Admin/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Admin/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>

    <!-- Custom js for this page -->
    <script src="~/Admin/js/data-table.js"></script>
    <!-- End custom js for this page -->
}