@model VwDashboardPage




<div class="content-wrapper">
    <div class="row">
        
       
        <div class="col-sm-4 grid-margin">
            <div class="card">
                
                <div class="card-body">
                    <h5>Categories</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                  <h2 class="mb-0">@Model.NumOfCategories</h2>
                                
                            </div>
                           
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                          <a asp-controller="categories" asp-action="list">  <i class="icon-lg mdi mdi-codepen text-primary ml-auto"></i> </a>
                        </div>
                    </div>
                </div>
                 
            </div>
        </div>
        
       
        <div class="col-sm-4 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Jobs</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h2 class="mb-0">@Model.NumOfJobs</h2>
                            </div>
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                           <a asp-controller="Jobs" asp-action="list">  <i class="icon-lg mdi mdi-wallet-travel text-danger ml-auto"></i> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
        <div class="col-sm-4 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Locations</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h2 class="mb-0">@Model.NumOfJobLocations</h2>
                            </div>
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                           <a asp-controller="JobLocations" asp-action="list">  <i class="icon-lg mdi mdi-google-maps text-warning ml-auto"></i> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-4 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Job Types</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h2 class="mb-0">@Model.NumOfJobTypes</h2>
                            </div>
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                           <a asp-controller="JobTypes" asp-action="list">  <i class="icon-lg mdi mdi-format-line-weight text-success ml-auto"></i> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-4 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Applicants</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h2 class="mb-0">@Model.NumOfApplicants</h2>
                            </div>
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                             <i class="icon-lg mdi mdi-monitor text-secondary ml-auto"></i> 
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-4 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Users</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h2 class="mb-0">@Model.NumOfUsers</h2>
                            </div>
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                           <a asp-controller="users" asp-action="list">  <i class="icon-lg mdi mdi-account text-danger ml-auto"></i> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- content-wrapper ends -->


