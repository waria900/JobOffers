@model List<TbJobType>


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> JobT Types Table </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">JobT ypes</a></li>
                <li class="breadcrumb-item active" aria-current="page">List</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <p class="card-description">
                        <a asp-controller="JobTypes" asp-action="Edit" class="btn btn-success btn-fw">New</a>
                    </p>
                    <div class="table-responsive">
                        <table id="example1" class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="color:#fff;"> JobT Type  </th>
                                    <th style="color:#fff;"> Actions </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var type in Model)
                                {
                                    <tr>

                                        <td style="color:#fff;"> @type.JobTypeName </td>
                                        <td class="col-md-4" style="padding: 0.5rem 1rem;">
                                            <a style="height:max-content"
                                           asp-controller="JobTypes" asp-action="Edit" asp-route-id="@type.JobTypeId"
                                           class="btn btn-info btn-fw">Edit</a>


                                            <a asp-controller="JobTypes" asp-action="Delete" asp-route-id="@type.JobTypeId"
                                           class="btn btn-danger btn-fw">Delete</a>
                                        </td>

                                    </tr>

                                }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

